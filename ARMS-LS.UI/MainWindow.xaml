<Window x:Class="ARMS_LS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARMS_LS"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
    Title="ARMSLS" Height="500" Width="800">
    <Border CornerRadius="5" BorderThickness="1" Background="#333" BorderBrush="#444">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="85*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="5" BorderThickness="1" Background="Gray" BorderBrush="#444" Grid.ColumnSpan="2">
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"  
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0"
                    >
                    <StackPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="DarkGreen" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <TextBlock Foreground="Black" FontWeight="Bold" FontSize="15" TextAlignment="Center"
                       Text="Accounts and Receivable Managment Solution " 
                       Margin="0,0,150,0"
                       TextWrapping="Wrap"/>
                    <TextBlock Foreground="Black" FontWeight="Bold" FontSize="15" TextAlignment="Center"
                       Text="for the Landscape Maintenance Industry " 
                       Margin="0,0,150,0"
                       TextWrapping="Wrap"/>

                </StackPanel>
            </Border>
            <StackPanel Grid.Row="1" Orientation="Horizontal"  Margin="0,0,0,0"
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                        Grid.ColumnSpan="2" Grid.Column="0">
                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <TextBlock Foreground="White" FontWeight="Bold" FontSize="15" TextAlignment="Left" FontStyle="Italic"
                    Text="Designer Solutions LLC. " Grid.Column="0"
                    Margin="5,0,0,0" />  
                
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:dddd, MMMM dd, yyyy}'}" 
                   TextAlignment="Right" Grid.Column="1" HorizontalAlignment="Stretch" Width="600"
                   VerticalAlignment="Center"
                   Foreground="Black" FontWeight="Bold" FontSize="10"  FontStyle="Italic" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" Width="150" Margin="0,5,0,0">
                <Button Name="btn_Customer" Click="btn_Customer_Click" Width="150" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/group.png" Width="16" Height="16" Margin="0,0,20,0" />
                        <TextBlock Text="Customer"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_Customer_History" Click="btn_Customer_History_Click" Width="150" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/history.png" Width="16" Height="16" Margin="0,0,20,0" />
                        <TextBlock Text="Customers History"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_Charges_Page" Click="btn_Charges_Page_Click" Width="150" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/charges.png" Width="16" Height="16" Margin="0,0,20,0" />
                        <TextBlock Text="Charges"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_Payments_Page" Click="btn_Payments_Page_Click" Width="150" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/payment.png" Width="16" Height="16" Margin="0,0,20,0" />
                        <TextBlock Text="Payments"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_Tools_Page" Click="btn_Tools_Page_Click" Width="150" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/tools.png" Width="16" Height="16" Margin="0,0,20,0" />
                        <TextBlock Text="Tools"/>
                    </StackPanel>
                </Button>
            </StackPanel>


            <Frame Grid.Row="2" Grid.Column="1" Background="#555" 
                   NavigationUIVisibility="Hidden" Name="MainFrame" Margin="1,5,3,10" />
        </Grid>
    </Border>
</Window>
