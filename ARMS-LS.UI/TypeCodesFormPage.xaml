<Page x:Class="ARMS_LS.UI.TypeCodesFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARMS_LS.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="TypeCodesFormPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>  </ColumnDefinition>
            <ColumnDefinition>   </ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Rectangle Fill="#333" Stroke="#333" StrokeThickness="2" Grid.Row="0" 
           Grid.ColumnSpan="2"  Margin="0,0,0,0"/>
        <Label Content="Type Codes" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" 
               HorizontalContentAlignment="Center" 
               Foreground="White" Grid.Row="0"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4" Background="LightGray" />
        <Rectangle Fill="LightYellow" Stroke="Gray" StrokeThickness="2" Grid.Row="1" 
                   Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="120,10,80,0"/>
        <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="1" Margin="240,20,0,0">Type Code</TextBlock>
            <TextBox Name="txtCode" Grid.Column="1" Grid.Row="1" Margin="0, 20,120,0"></TextBox>


        <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="2" Margin="240,10,0,10">Description</TextBlock>
            <TextBox Name="txtDescription" Grid.Column="1" Grid.Row="2" Margin="0,10,120,10"></TextBox>
        
        

            <Button Content="Save" Grid.Column="0" Grid.Row="3" FontWeight="Bold" Padding="0,0,0,0" Name="btn_Save" 
                Click="btn_Save_Click" 
                Width="50" Height="20" Margin="260,0,0,0" />
        <Button Content="Cancel" Grid.Column="1" Grid.Row="3" FontWeight="Bold" Padding="0,0,0,0" Name="btn_Cancel" 
                    Click="btn_Cancel_Click" 
                Width="50" Height="20" Margin="0,0,220,0" />
        
        
    </Grid>
</Page>
