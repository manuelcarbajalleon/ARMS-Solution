<Page x:Class="ARMS_LS.TypeCodesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARMS_LS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="TypeCodesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Label Content="Type Codes" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" 
               HorizontalContentAlignment="Center" Foreground="White" Grid.Row="0"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="LightGray"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="40,20,40,0" 
                    VerticalAlignment="Top" Height="30" HorizontalAlignment="Center" Background="Gray">
            <Button Content="Select" FontWeight="Bold" Padding="0,0,0,0" Name="btn_Select" Click="btn_Select_Click" 
                    Width="50" Height="20" Margin="5,0,0,0" />
            <Button Content="Add" FontWeight="Bold" Name="btn_Add" Click="btn_Add_Click" 
                    Width="50" Height="20" Margin="1,0,0,0" />
            <Button Content="Edit" FontWeight="Bold" Name="btn_Edit" Click="btn_Edit_Click" 
                    Width="50" Height="20" Margin="1,0,0,0" />
            <Button Content="Delete" FontWeight="Bold" Name="btn_Delete" Click="btn_Delete_Click" 
                    Width="50" Height="20" Margin="1,0,0,0" />
            <Button Content="Print" FontWeight="Bold" Name="btn_Print" Click="btn_Print_Click" 
                    Width="50" Height="20" Margin="1,0,0,0" />
            <Button Content="List" FontWeight="Bold" Name="btn_List" Click="btn_List_Click" 
                    Width="50" Height="20" Margin="1,0,5,0" />
        </StackPanel>
        <DataGrid x:Name="typeCodesList" HorizontalAlignment="Center" VerticalAlignment="Top" 
                  Width="250" Height="200"  Grid.Row="2" Background="LightYellow"
                  AutoGeneratingColumn="typeCodesList_AutoGeneratingColumn" RowBackground="LightYellow"
                  IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="typeCodesList_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Frame Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Height="450" NavigationUIVisibility="Hidden" 
               Name="TypeCodeFrame" Grid.ColumnSpan="2" Margin="0,0,0,0" />

    </Grid>
</Page>
